		<script>
			
			$(function(){
				
				$("#table3").datagrid({
					
					url:"datagrid.json",
					columns:[[
						{field:'code',title:'编号',width:100,align:'center'},
						{field:'name',title:'书名',width:100,align:'center'},
						{field:'price',title:'价格',width:100,align:'center'},
						{field:'options',title:"删除",width:100,align:'center',formatter:function(value,row,index){
							return "<a href=\"del?code="+row.code+"\">删除</a>"; 
						}}
					]]
				});
			});
		</script>
